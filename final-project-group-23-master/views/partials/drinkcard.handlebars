<article class="drink-card">
    <div class="name">
      <h1>{{Name}}</h1>
    </div>
    <div class="ingredients">
      <h2> Ingredients: </h2>
      <ul>
        {{#each Ingredients}}
         <li>{{.}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="recipe">
      <h2> Recipe: </h2>
      <p> {{Recipe}} </p>
      
    </div>
</article>

